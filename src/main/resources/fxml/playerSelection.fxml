<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bomberman.controller.PlayerSelectionController">
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="SÃ©lection du nombre de joueurs">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" top="50.0" />
            </VBox.margin>
        </Label>

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <RadioButton fx:id="onePlayerRadio" text="1 Joueur (3 Bots)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="twoPlayersRadio" text="2 Joueurs (2 Bots)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="threePlayersRadio" text="3 Joueurs (1 Bot)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="fourPlayersRadio" text="4 Joueurs (0 Bot)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </RadioButton>
            </children>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </VBox>

        <Label fx:id="infoLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Joueurs humains: 2 | Bots: 2">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="backButton" onAction="#handleBack" prefWidth="120.0" text="Retour">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="startGameButton" onAction="#handleStartGame" prefWidth="120.0" text="Commencer">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>